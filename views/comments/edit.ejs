<%- include('../partials/header'); -%>
	<h1 class="display-4" style="text-align:center;">
		Edit Comment for <%=campground.name%> 
	</h1>
	<div class="row">
		<div class="container" style="width:30%; margin:25px auto;">
		
			<form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/?_method=PUT" method="POST">

				<div class="form-group">
					<input class="form-control" id="imageurl" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				

				<div class="form-group">
					<button type="submit" class="btn btn-primary form-control">
						Submit!
					</button>
				</div>

				<a href="/campgrounds/<%=campground._id%>">Go Back</a>
			</form>
		</div>
	</div>
	<%- include('../partials/footer'); -%>