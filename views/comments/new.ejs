<%- include('../partials/header'); -%>
	<h1 class="display-4" style="text-align:center;">
		Add a Comment for <%=campground.name%> 
	</h1>
	<div class="row">
		<div class="container" style="width:30%; margin:25px auto;">
			<form action="/campgrounds/<%=campground._id%>/comments/" method="POST">

				<div class="form-group">
					<!-- <label for="imageurl">Text</label> -->

					<input class="form-control" id="imageurl" type="text" name="comment[text]" placeholder="comment">
				</div>
				

				<div class="form-group">
					<button type="submit" class="btn btn-primary form-control">
						Submit!
					</button>
				</div>

				<a href="/campgrounds/<%=campground._id%>">Go Back</a>
			</form>
		</div>
	</div>
	<%- include('../partials/footer'); -%>